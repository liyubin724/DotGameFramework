<?xml verstion="1.0" encoding = "utf-8">

<configuration>

    <configSections>

        <section name = "log4net"
                 type = "log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>

    </configSections>

    <log4net debug = "true">
        <root>  
            <level value = "ALL"/>
            <appender-ref ref = "UnityConsoleAppender"/>
        </root>

        <logger name = "">
            <level value = "DEBUG"/>
        </logger>

        <appender name = "UnityConsoleAppender" type = "Dot.Core.Log.UnityConsoleAppender">
            <layout type = "log4net.Layout.PatternLayout">
                <param name = "ConversionPattern" value = "%d [%t] %-5p %c [%x] -%m%n"/>
            </layout>
        </appender>
        
    </log4net>

</configuration>